<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Welcome to fazbook</h1>
    <a href="/users/new">Create a user</a>
    <% users.forEach(function(users){ %>
    <div>
      <span><%= users.firstName %></span>
      <span><%= users.lastName %></span>
      <span><%= users.email %></span>
      <span><%= users.dob %></span>

      <form action= "<%='/users/' + users.id + '?_method=DELETE' %>" method="POST">
        <input type="submit" value="X"/>
      </form>
    </div>
    <% }) %>
  </body>
</html>
